<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Minuman"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Silahkan Pesan Minuman"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:text="Please Order Drink" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="338dp"
        android:layout_weight="1.11"
        android:orientation="vertical"
        android:weightSum="1">

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Drink" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/editTextTeksture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingRight="20dp"
                android:text="Teksture" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="259dp"
                android:layout_height="78dp"
                android:layout_below="@+id/etPassword2"
                android:layout_alignStart="@+id/etPassword2">

                <RadioButton
                    android:id="@+id/rbLakilaki"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Ice" />

                <RadioButton
                    android:id="@+id/rbPerempuan"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Hot" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_weight="0.17"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/editTextTeksture"
                android:layout_width="179dp"
                android:layout_height="121dp"
                android:layout_weight="1"
                android:text="Tempat" />
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/pemesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.design.widget.TextInputLayout>

        <EditText
            android:id="@+id/editTextPesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Pemesan" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kembali" />

        <Button
            android:id="@+id/buttonView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lihat" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pesan" />

    </LinearLayout>

</LinearLayout>
