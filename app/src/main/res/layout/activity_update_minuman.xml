<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateMinuman"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Silahkan Pesan Minuman"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:text="Please Order Drink" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="1.75">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="No Drink" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/editTextTeksture"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingRight="20dp"
                    android:text="Teksture" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="259dp"
                    android:layout_height="78dp"
                    android:layout_below="@+id/etPassword2"
                    android:layout_alignStart="@+id/etPassword2">

                    <RadioButton
                        android:id="@+id/rbLakilaki"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Ice" />

                    <RadioButton
                        android:id="@+id/rbPerempuan"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Hot" />

                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Drink" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="114dp"
                    android:layout_weight="0.17"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="191dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/editTextTeksture"
                            android:layout_width="77dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Tempat" />

                        <RadioGroup
                            android:id="@+id/radioGroup1"
                            android:layout_width="85dp"
                            android:layout_height="78dp"
                            android:layout_alignStart="@+id/etPassword2"
                            android:layout_weight="0.59">

                            <RadioButton
                                android:id="@+id/rbYes"
                                android:layout_width="93dp"
                                android:layout_height="wrap_content"
                                android:text="Bottle" />

                            <RadioButton
                                android:id="@+id/rbNo"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Cup" />

                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="191dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/editTextSize"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:paddingRight="20dp"
                            android:text="Size" />

                        <RadioGroup
                            android:id="@+id/radioGroup2"
                            android:layout_width="match_parent"
                            android:layout_height="111dp"
                            android:layout_alignStart="@+id/etPassword2">

                            <RadioButton
                                android:id="@+id/rbGelas"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="S" />

                            <RadioButton
                                android:id="@+id/rbCup"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="M" />

                            <RadioButton
                                android:id="@+id/rbBottle"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="L" />
                        </RadioGroup>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/pemesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextPesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Pemesan" />

        </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BACK" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete" />

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update" />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>